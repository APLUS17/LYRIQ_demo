{
  "global": {
    "colors": {
      "primary": "#095FFB",
      "secondary": "#F6F8FB",
      "background-light": "#FFFFFF",
      "background-dark": "#111827",
      "surface": "#F6F8FB",
      "error": "#FF6161",
      "warning": "#FFA900",
      "info": "#4386FA",
      "success": "#2BD969",
      "text-primary": "#151517",
      "text-secondary": "#64748B",
      "text-muted": "#A5A6AA",
      "border": "#E5EAF1",
      "gradient-primary": "linear-gradient(180deg, #095FFB 0%, #4386FA 100%)"
    },
    "typography": {
      "font-family": "Inter, SF Pro, Arial, Helvetica, system-ui, sans-serif",
      "h1": { "font-size": 28, "font-weight": 700, "line-height": 1.2 },
      "h2": { "font-size": 22, "font-weight": 600, "line-height": 1.3 },
      "h3": { "font-size": 18, "font-weight": 500, "line-height": 1.4 },
      "body": { "font-size": 16, "font-weight": 400, "line-height": 1.5 },
      "caption": { "font-size": 12, "font-weight": 400, "line-height": 1.2 }
    },
    "spacing": {
      "xs": 4,
      "sm": 8,
      "md": 12,
      "lg": 16,
      "xl": 24,
      "xxl": 32
    },
    "radius": {
      "button": 8,
      "card": 16,
      "modal": 24,
      "chip": 16
    },
    "shadow": {
      "card": "0px 2px 6px rgba(13, 39, 80, 0.04)",
      "low": "0px 1px 4px rgba(0,0,0,0.04)",
      "high": "0px 4px 12px rgba(0,0,0,0.10)"
    },
    "border": {
      "width": 1,
      "color": "#E5EAF1"
    },
    "components": {
      "button-primary": {
        "background": "#095FFB",
        "color": "#FFFFFF",
        "radius": 8,
        "hover-bg": "#054FC6",
        "disabled-bg": "#A5A6AA"
      },
      "button-secondary": {
        "background": "#F6F8FB",
        "color": "#095FFB",
        "border": "#095FFB",
        "radius": 8
      },
      "input": {
        "background": "#F6F8FB",
        "color": "#151517",
        "radius": 8,
        "border": "#E5EAF1",
        "focus-shadow": "0px 2px 6px rgba(13, 39, 80, 0.10)"
      },
      "card": {
        "background": "#FFFFFF",
        "radius": 16,
        "shadow": "0px 2px 6px rgba(13, 39, 80, 0.04)",
        "border": "#E5EAF1"
      },
      "modal": {
        "background": "#FFFFFF",
        "radius": 24,
        "shadow": "0px 4px 24px rgba(13, 39, 80, 0.08)"
      },
      "chip": {
        "background": "#F6F8FB",
        "color": "#151517",
        "radius": 16
      },
      "icon": {
        "stroke": 2,
        "color": "#151517"
      }
    },
    "grid": {
      "columns": 12,
      "gutters": 16
    },
    "animation": {
      "fast": "150ms",
      "medium": "250ms",
      "slow": "400ms",
      "easing": "ease-in-out"
    }
  }
}